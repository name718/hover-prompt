{
  "manifest_version": 3,
  "name": "HoverPrompt",
  "description": "点击→高亮→输入需求→生成结构化Prompt→复制到剪贴板",
  "version": "0.1.0",
  "action": {
    "default_title": "HoverPrompt"
  },
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "clipboardWrite"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  }
}
